<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <layout spacing="true">
        <browserFrame id="bfAllowParameter"
                      width="100%"
                      height="100%"
                      allow="fullscreen"/>

        <browserFrame id="bfAllowParameters2"
                      width="100%"
                      height="100%"
                      allow="autoplay camera"/>

        <browserFrame id="bfAllowParameters5"
                      width="100%"
                      height="100%"
                      allow="fullscreen geolocation document-domain microphone payment"/>

        <browserFrame id="bfAllowCustomParameter"
                      width="100%"
                      height="100%"
                      allow="custom-parameter"/>

        <browserFrame id="bfAllowCombinedParameters"
                      width="100%"
                      height="100%"
                      allow="payment custom-parameter"/>
    </layout>
</window>