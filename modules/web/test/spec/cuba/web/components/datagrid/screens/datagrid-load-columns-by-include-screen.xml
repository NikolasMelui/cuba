<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <data>
        <collection id="usersDc"
                    class="com.haulmont.cuba.security.entity.User"
                    view="user.browse">
            <loader id="usersLd">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
        <collection id="customersDc"
                    class="com.haulmont.cuba.web.testmodel.sales.Customer"
                    view="customer-with-address">
            <loader id="customersLd">
                <query><![CDATA[select e from test$Customer e]]></query>
            </loader>
        </collection>
        <collection id="goodsInfoDc"
                    class="com.haulmont.cuba.web.testmodel.sample.GoodInfo"/>
    </data>

    <layout spacing="true">
        <dataGrid id="usersDataGridView" width="100%" height="100%" dataContainer="usersDc">
            <columns includeBy="view"/>
        </dataGrid>

        <dataGrid id="usersDataGridLocal" width="100%" height="100%" dataContainer="usersDc">
            <columns includeBy="local"/>
        </dataGrid>

        <dataGrid id="customersEmbDataGrid" width="100%" height="100%" dataContainer="customersDc">
            <columns includeBy="view">
                <column property="address.city"/>
                <column property="address.zip"/>
            </columns>
        </dataGrid>

        <dataGrid id="customersDataGridOverriding" width="100%" height="100%" dataContainer="customersDc">
            <columns includeBy="view">
                <column property="name" sortable="false"/>
            </columns>
        </dataGrid>

        <dataGrid id="customersTableExcluding" width="100%" height="100%" dataContainer="customersDc">
            <columns includeBy="view" exclude="address, name"/>
        </dataGrid>

        <dataGrid id="goodsInfoTable" width="100%" height="100%" dataContainer="goodsInfoDc">
            <columns includeBy="view" exclude="isFragile"/>
        </dataGrid>
    </layout>
</window>