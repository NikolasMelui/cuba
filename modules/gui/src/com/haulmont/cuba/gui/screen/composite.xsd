<xs:schema targetNamespace="http://schemas.haulmont.com/cuba/screen/composite.xsd"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://schemas.haulmont.com/cuba/screen/composite.xsd"
           xmlns:layout="http://schemas.haulmont.com/cuba/screen/layout.xsd"
           elementFormDefault="qualified">

    <xs:include schemaLocation="http://schemas.haulmont.com/cuba/screen/layout.xsd"/>

    <xs:element name="composite">
        <xs:complexType>
            <xs:sequence>
                <xs:group ref="layout:singleLayoutOrComponent"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>